# AI Content Auto-Generator Configuration
# Copy this file to config.yaml and add your API keys

# API Keys (use environment variables in production)
api_keys:
  openai: "${OPENAI_API_KEY}"  # Get from https://platform.openai.com/api-keys
  gemini: "${GEMINI_API_KEY}"  # Get from https://makersuite.google.com/app/apikey
  anthropic: "${ANTHROPIC_API_KEY}"  # Get from https://console.anthropic.com/
  stability: "${STABILITY_API_KEY}"  # Get from https://platform.stability.ai/
  adobe_firefly: "${ADOBE_API_KEY}"  # Get from https://developer.adobe.com/

# API Limits (daily quotas - adjust based on your plan)
limits:
  openai:
    text: 1000  # GPT requests per day
    image: 50   # DALL-E generations per month
  gemini:
    flash: 1500  # Gemini Flash requests
    pro: 50      # Gemini Pro requests
  imagen:
    unlimited: true  # Google Imagen 3 (currently unlimited)
  stability:
    basic: 100  # Stability AI credits
  adobe_firefly:
    daily: 25  # Adobe Firefly generations
  anthropic:
    text: 1000  # Claude requests

# Distribution Strategy
distribution:
  mode: "round_robin"  # Options: round_robin, priority, cost_optimized
  retry_attempts: 3
  timeout: 30  # seconds

# Caching Configuration
cache:
  enabled: true
  backend: "memory"  # Options: redis, memory
  redis_host: "localhost"  # If using redis
  redis_port: 6379
  ttl: 2592000  # 30 days in seconds
  similarity_threshold: 0.85

# A/B Testing
ab_testing:
  enabled: true
  min_sample_size: 100
  confidence_level: 0.95
  auto_winner_selection: true

# Optimization
optimization:
  enabled: true
  metrics:
    - time_on_page
    - bounce_rate
    - conversion_rate
  interval: "daily"
  learning_rate: 0.1

# Monitoring
monitoring:
  dashboard_port: 8080
  metrics_enabled: true
  alerts:
    - type: "api_limit_warning"
      threshold: 0.8  # Alert at 80% of limit
    - type: "error_rate"
      threshold: 0.05  # Alert at 5% error rate

# Logging
logging:
  level: "INFO"  # DEBUG, INFO, WARNING, ERROR
  file: "logs/generator.log"
  rotation: "10 MB"
  retention: "30 days"
  format: "{time:YYYY-MM-DD HH:mm:ss} | {level: <8} | {name}:{function}:{line} - {message}"

# Fallback Strategy
fallback:
  enabled: true
  cascade:
    - "primary_api"
    - "secondary_api"
    - "cache"
    - "template"

# SEO Configuration
seo:
  auto_meta_generation: true
  schema_org: true
  alt_text_generation: true
  internal_linking: true
  keywords_density_check: true